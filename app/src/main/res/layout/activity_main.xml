<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/main_container"
    tools:context="se.peter.memorytraining.MainActivity"
    >



    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Memory Training"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textAlignment="center"

        />







    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/child_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="26sp"
        android:onClick="startTraining"
        android:background="@android:color/holo_red_light"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Alt start"
        android:textSize="26sp"
        android:onClick="startAltTraining"
        android:id="@+id/button"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/start_btn"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Base.Widget.AppCompat.Button"
        android:id="@+id/statistics_btn"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="26sp"
        android:background="@android:color/holo_red_light"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginTop="54dp"
        android:onClick="showStatistics"/>


</RelativeLayout>
